var ticketRow = document.getElementById('<%= @ticket_token.code %>');
if(ticketRow) {
	ticketRow.innerHTML = "<%= escape_javascript(render partial: 'check_ins/ticket_token_row', locals: {ticket_token: @ticket_token}) %>";
}
var validationDetails = document.querySelector('.validation.details');
var modal = document.getElementById('success-validation');
modal.innerHTML = "<%= escape_javascript(render partial: 'create', locals: {ticket_token: @ticket_token}) %>";
modal.classList.remove('is-hidden');
validationDetails.classList.remove('is-hidden');

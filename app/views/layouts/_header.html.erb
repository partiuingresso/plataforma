<header class="partiu_header">
  <nav class="navbar container is-transparent" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <%= link_to image_tag('logo-light.svg', alt:'PartiuIngresso.com', width:'130', class:'logo'), root_path, class: "navbar-item" %>

      <a role="button" class="navbar-burger burger has-text-white" aria-label="menu" aria-expanded="false" data-target="navbarPartiuIngresso">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarPartiuIngresso" class="navbar-menu">
      <div class="navbar-end">
        <% if signed_in? %>

        <%= link_to nil, class: "navbar-item user" do %>
        <span class="icon has-text-danger">
          <i class="fas fa-ticket-alt"></i>
        </span>
        <span>Meus Ingressos</span>
        <% end %>

        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link user">
            <span class="icon">
            <i class="fas fa-user"></i>
            </span> 
            <span><%= current_user.name.first %></span>
          </a>


          <div class="navbar-dropdown is-boxed">

            <%= link_to edit_user_registration_path, class: "navbar-item" do %>
            <span class="icon has-text-info">
              <i class="far fa-file-alt"></i>
            </span>
            <span>Minha Conta</span>
            <% end %>

            <%= link_to nil, class: "navbar-item" do %>
            <span class="icon has-text-link">
              <i class="fas fa-question-circle"></i>
            </span>
            <span>Precisa de Ajuda?</span>
            <% end %>

            <hr class="navbar-divider">
            <%= link_to destroy_user_session_path, method: "delete", class: "navbar-item" do %>
            <span class="icon">
            <i class="fas fa-sign-out-alt"></i>
            </span>
            <span>Sair</span>
            <% end %>
          </div>
        </div>
        <% else %>
        <div class="navbar-item">
          <div class="buttons">
            <%= link_to "Cadastre-se", signup_path, class: "button is-primary" %>
            <%= link_to "Login", login_path, class: "button is-light" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
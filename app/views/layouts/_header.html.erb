<header class="partiu_header">
  <nav class="navbar container" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <%= link_to image_tag('logo-light.svg', alt:'PartiuIngresso.com', width:'160', class:'logo'), root_path, class: "navbar-item" %>

      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarPartiuIngresso">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarPartiuIngresso" class="navbar-menu">
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <% if signed_in? %>
            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                <%= current_user.name.first %>
              </a>

              <div class="navbar-dropdown">
                <%= link_to "Profile", edit_user_registration_path, class: "navbar-item" %>
                <a class="navbar-item">
                  Minhas Vendas
                </a>
                <a class="navbar-item">
                  Precisa de Ajuda?
                </a>
                <hr class="navbar-divider">
                <%= link_to "Sign out", destroy_user_session_path, method: "delete", class: "navbar-item" %>
              </div>
            </div>
            <% else %>
            <%= link_to "Cadastre-se", signup_path, class: "button is-primary" %>
            <%= link_to "Login", login_path, class: "button is-light" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
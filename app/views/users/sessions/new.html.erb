<% provide(:title, "Cadastre-se") %>
<% content_for :navbar do %>
<%= render 'layouts/header_clean' %>
<% end %>



<section class="section login">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-5">
        <div class="card">
          <div class="card-content">
            <p class="title has-text-centered">Fa√ßa o login</p>
            <br />

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <label class="label">Email</label>
              <div class="control has-icons-left has-icons-right">
                <%= f.email_field :email, autocomplete: "email", class: "input", placeholder: "nome@exemplo.com" %>
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
            </div>

            <div class="field">
              <label class="label">Senha</label>
              <div class="control has-icons-left has-icons-right">
                <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "********" %>
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me, class: "checkbox" %>
                Lembrar-me
              </div>
            <% end -%>

            <nav class="level">
              <div class="level-left">
                <div class="level-item">
                  <div class="control">
                    <%= f.button "Entrar", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Aguarde..." }, class: "button is-primary is-medium" %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="level-right">
                <div class="level-item">
                  <p class="help"><%= render "users/shared/links" %></p>
                </div>
              </div>
            </nav>


          </div>
        </div>
      </div>

    </div>
  </div>
</section>

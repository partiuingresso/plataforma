<%= javascript_include_tag "events/colors", defer: true %>
<%= javascript_include_tag "toggle", defer: true %>
<%= javascript_include_tag "events/cart", defer: true %>
<%= javascript_include_tag "events/maps", defer: true %>
<%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key='+Rails.application.credentials.google_maps_api_key %>
<script>
document.addEventListener("DOMContentLoaded", function(){
    initMap(<%=@event.address.latitude%>, <%=@event.address.longitude%>);
    toggle();
});
</script>
<script>
  imgurl = "<%= url_for(@event.hero_image) %>"
</script>
<style>
  .section.hero-event { background-image: url(<%= url_for(@event.hero_image) %>); }
</style>

<section class="section hero-event">
  <div class="hero-content-event">
    <div class="container">
      <div class="columns is-multiline event header">
        <% if @event.video.present? %>
          <div class="column is-12 has-text-centered">
            <a class="video-btn">
              <span class="icon has-text-white">
                <i class="fas fa-4x fa-play"></i>
              </span>
            </a>
          </div>
        <% end %> 
        <div class="column is-11 is-offset-1">
          <p class="event title has-text-white"><%= @event.name %></span></p>
        </div> 
      </div>
    </div>

    <div class="columns is-hidden-tablet">
      <div class="column is-11 is-offset-1">
        <table class="event table is-narrow">
          <tbody>
            <tr>
              <td class="spacer"></td>
              <td><span class="icon"><i class="far fa-calendar-check has-text-grey-light"></i></span></td>
              <td><span class="has-text-grey"><%= l @event.start_t, format: ("%d de %B de %Y") %></span></td>
              <td class="spacer"></td>
            </tr>
            <tr>
              <td class="spacer"></td>
              <td><span class="icon"><i class="far fa-clock has-text-grey-light"></i></span></td>
              <td><span class="has-text-grey"><%= l @event.start_t, format: ("%H horas") %></span></td>
              <td class="spacer"></td>
            </tr>
            <tr>
              <td class="spacer"></td>
              <td><span class="icon"><i class="fas fa-map-marker-alt has-text-grey-light"></i></span></td>
              <td><span class="has-text-grey"><%= truncate(@event.address.name, length: 15) %> - <%= truncate(@event.address.city, length: 24) %>/<%= @event.address.state %></span>
              <td class="spacer"></td>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div id="infobar" class="is-hidden-mobile">
    <div class="container">
      <div class="columns">
        <div class="column is-11 is-offset-1 is-vcentered">
          <div class="level">
            <div class="level-left">
              <div class="level-item">
                <span class="icon is-medium">
                  <span class="fa-stack">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="far fa-calendar-check fa-stack-1x has-text-white"></i>
                  </span>
                </span>
              </div>
              <div class="level-item">
                <span class="info"><%= l @event.start_t, format: ("%d de %B de %Y") %></span>
              </div>
              <div class="level-item spacer">
                <span class="fa-stack">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="far fa-clock fa-stack-1x has-text-white"></i>
                </span>
              </div>
              <div class="level-item">
                <span class="info"><%= l @event.start_t, format: ("%H horas") %></span>
              </div>
              <div class="level-item spacer">
                <span class="fa-stack">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fas fa-map-marker-alt fa-stack-1x has-text-white"></i>
                </span>
              </div>
              <div class="level-item">
                <span class="info"><%= @event.address.name %> - <%= truncate(@event.address.city, length: 24) %>/<%= @event.address.state %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<section class="section description">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <div class="content">
          <p class="about event">Sobre o Evento</p>
          <p class="about event-name has-text-primary"><%= @event.headline %></p>
          <div class="has-text-grey-dark"><%= sanitize @event.description %></div>
        </div>

        <hr />

        <div class="content">
          <p class="about event">Como Chegar</p>
          <p class="about event-name has-text-primary"><%= @event.address.name %></p>
          <p>
            <div id="map"></div>
          </p>
        </div>        
      </div>
      <div class="column is-4">
        <div class="event offers card">
          <div class="card-content">
            <%= form_for @order, url: new_order_path, method: "get" do |f| %>
              <%= f.hidden_field :event_id, value: @order.event.id %>
              <div class="columns">
                <div class="column is-6">
                  <p class="tickets title">Ingressos</p>
                </div>
                <div class="column is-6 has-text-right">
                  <span class="icon">
                    <i class="fas fa-shopping-cart"></i>
                  </span>
                  <span>R$</span><span id="total_price">0,00</span>
                </div>
              </div>
              <ul>
                <% @event.offers.each do |offer| %>
                  <li>
                    <hr />
                    <div class="columns is-vcentered is-multiline">
                      <div class="column is-5">
                        <p class="is-size-6"><%= offer.name %></p>
                      </div>
                      <div class="column is-3">
                        <p><%= offer.price.format %></p>
                      </div>
                      <div class="column is-3">
                        <%= f.fields_for :order_items do |order_item_f| %>
                          <%= order_item_f.hidden_field :offer_id, value: offer.id %>
                          <div class="level">
                            <div class="level-item">
                              <span class="icon is-small button minus">
                                <i class="fas fa-minus"></i>
                              </span>
                            </div>
                            <div class="level-item">
                              <%= order_item_f.hidden_field :quantity, value: 0, class: "quantity-input", data: { price: offer.price.to_f }, placeholder: "quantidade" %>
                              <span class="quantity-view">
                                0
                              </span>
                            </div>
                            <div class="level-item">
                              <span class="icon is-small button plus">
                                <i class="fas fa-plus"></i>
                              </span>
                            </div>
                          </div>
                        <% end %>
                      </div>
                      <% if offer.description? %>
                        <div class="column is-12 offer-info">
                          <a class="toggle button">Mais info<i class="fas fa-sort-down"></i></a>
                          <div class="offer-info-content dismiss is-hidden">
                            <a class="button">ESCONDER<i class="fas fa-sort-up"></i></a>
                            <div class="has-background-light animated fadeIn fast">
                              <%= sanitize offer.description %>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </li>
                <% end %>
              </ul>
              <div class="control" style="margin-top: 2.5rem;">
                <%= f.button "Comprar", class: "button is-primary is-medium is-fullwidth" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
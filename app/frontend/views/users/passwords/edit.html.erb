<% provide(:title, "Alterar senha") %>
<% content_for :navbar do %>
  &nbsp;
<% end %>
<% content_for :footer do %>
  &nbsp;
<% end %>

<div class="usersBg">
  <div class="usersCard">
    <div class="logo">
      <%= link_to image_tag(asset_pack_path("media/assets/images/logo-grad.svg"), alt:'PartiuIngresso.com', width:'33'), root_path %>
    </div>
    <div class="form">
      <div class="usersTitle">
        Altere sua senha
      </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
        <div class="field mb">
          <label class="label">Nova senha</label>
            <div class="control pass">
              <%= f.password_field :password, autofocus: true, class: "input", placeholder: "••••••••" %>
            </div>
            <div class="error-msg-area">
              <span id="blank_password_error" class="error" aria-alive="polite">O campo "Senha" é obrigatório.</span>
              <span id="invalid_password_error" class="error" aria-alive="polite">A senha precisa ter pelo menos 8 caracteres.</span>
            </div>
        </div>

        <div class="field mb">
          <label class="label">Confirme a nova senha</label>
            <div class="control pass">
              <%= f.password_field :password_confirmation, class: "input", placeholder: "••••••••" %>
            </div>
            <div class="error-msg-area">
              <span id="blank_password_error" class="error" aria-alive="polite">O campo "Confirme sua senha" é obrigatório.</span>
              <span id="invalid_password_error" class="error" aria-alive="polite">A senha precisa ter pelo menos 8 caracteres.</span>
            </div>
        </div>

        <div class="signIn">
          <%= f.button "Alterar senha", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Aguarde..." }, class: "button" %>
          <%= link_to "<- Voltar", login_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>